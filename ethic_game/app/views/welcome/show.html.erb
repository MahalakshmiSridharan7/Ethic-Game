<div class="jumbotron text-center" style="margin-bottom:0">
    
    <h1 class="display-4 header-text">Scenario: <%= @scenario.title%></h1>
    
    <div class="container"><%= @scenario.description%></div>
    
</div>

<div class="card">
    
    <div class="card-header text-center">
        Conversation
    </div>
    
    <div class="card-body">
        <% for i in 0..@history_length %> 
            <div class="row">
                <div class="col-12">
                    <div class='float-right'><%= @question_history[i] %></div>
                </div>
            </div>
            <div class="row">
                <div class="col-12">
                    <div><%= @response_history[i] %></div>
                </div>
            </div>
        <% end%>
        
        <div class="row">
            <div class="col-6">
                <h5 class="text-center">Villager</h5>
            </div>
            <div class="col-6">
                <h5 class="text-center"><%= @player.name%></h5>
            </div>
        </div>
        
    </div>
    
    <div class="card-footer">
        <div class="row">
            <div class="col-11">
                <input class="form-control form-control-lg" type="text" placeholder="Input">
                <!--<%= text_field_tag 'name'%>-->
            </div>
            <div class="col-1">
                <div class="btn btn-primary">
                  Submit
                </div>
            </div>
        </div>
    </div>
    
</div>